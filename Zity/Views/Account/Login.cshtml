@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";

}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zity</title>

    <!-- Google Fonts y Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@800&family=Poppins:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ESTILOS PARA LA PÁGINA DE AUTENTICACIÓN -->
    <style>
        :root {
            --zity-blue: #0d6efd;
            --zity-bg: #f8f9fa; /* Fondo gris claro */
            --zity-text: #212529;
            --zity-text-muted: #6c757d;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--zity-bg);
            color: var(--zity-text);
            /* Centrado vertical y horizontal */
            display: grid;
            place-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        .auth-card {
            background-color: #fff;
            max-width: 480px;
            width: 100%;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 10px 40px rgba(0,0,0,0.07);
            padding: 2rem;
        }

            .auth-card h2 {
                font-family: 'Manrope', sans-serif;
                font-weight: 800;
                margin-bottom: 0.5rem;
            }

        .form-label {
            font-weight: 500;
            color: var(--zity-text);
            font-size: 0.9rem;
        }

        .form-control {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
        }

            .form-control:focus {
                border-color: var(--zity-blue);
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .btn-primary {
            background-color: var(--zity-blue);
            border-color: var(--zity-blue);
            border-radius: 0.5rem;
            padding: 0.75rem;
            font-weight: 500;
        }

        a {
            color: var(--zity-blue);
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .close-button {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: #e9ecef;
            border: none;
            border-radius: 50%;
            width: 32px;
            height: 32px;
        }

        /* ESTA ES LA REGLA QUE FALTABA */
        .auth-card a {
            color: var(--zity-blue);
            text-decoration: none;
            font-weight: 500;
        }

            .auth-card a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="auth-card position-relative">
        <button type="button" class="btn-close close-button" aria-label="Close"></button>
        <div class="card-body">
            <h2 class="card-title text-center">Inicia sesión en tu cuenta</h2>
            <p class="text-center text-muted mb-4">
                ¿Es tu primera vez en Zity?
                <a asp-action="Register" asp-controller="Account">Regístrate ahora</a>
            </p>

            <form asp-controller="Account" asp-action="Login" method="post">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                <div class="mb-3">
                    <label for="email" class="form-label">Correo electrónico o nombre de usuario</label>
                    <input name="email" type="email" class="form-control" id="email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input name="password" type="password" class="form-control" id="password" required>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Iniciar sesión</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>