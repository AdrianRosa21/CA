@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container py-4">
    <header class="d-flex flex-wrap align-items-center justify-content-between pb-4 mb-4 border-bottom">
        <div>
            <h1 class="h2 fw-bold mb-1" style="font-family: 'Manrope', sans-serif;">Gestión de Usuarios</h1>
            <p class="text-muted">Busca, visualiza y gestiona a los usuarios de la plataforma.</p>
        </div>
    </header>

    <!-- BARRA DE BÚSQUEDA Y FILTROS -->
    <div class="zity-card p-3 mb-4">
        <form class="row g-3 align-items-center">
            <div class="col-lg-8">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Buscar por nombre, apellido o correo electrónico...">
                </div>
            </div>
            <div class="col-lg-4">
                <select class="form-select">
                    <option selected>Filtrar por estado...</option>
                    <option>Activos</option>
                    <option>Reportados</option>
                    <option>Suspendidos</option>
                </select>
            </div>
        </form>
    </div>

    <!-- TABLA DE USUARIOS -->
    <div class="zity-card">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="px-4 py-3">Usuario</th>
                        <th>Incidentes</th>
                        <th>Participaciones</th>
                        <th>Reportes Recibidos</th>
                        <th>Estado</th>
                        <th class="px-4 py-3 text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Fila de ejemplo 1 -->
                    <tr>
                        <td class="px-4">
                            <div class="d-flex align-items-center gap-3">
                                <img src="https://placehold.co/40x40" class="rounded-circle" alt="" />
                                <div>
                                    <div class="fw-bold">Josué Hernández</div>
                                    <div class="small text-muted">josuekph22@gmail.com</div>
                                </div>
                            </div>
                        </td>
                        <td>5</td>
                        <td>12</td>
                        <td>0</td>
                        <td><span class="badge text-bg-success">Activo</span></td>
                        <td class="text-end px-4">
                            <a href="#" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>

                    </tr>
                    <!-- Fila de ejemplo 2 -->
                    <tr>
                        <td class="px-4">
                            <div class="d-flex align-items-center gap-3">
                                <img src="https://placehold.co/40x40" class="rounded-circle" alt="" />
                                <div>
                                    <div class="fw-bold">Usuario Problemático</div>
                                    <div class="small text-muted">fake@correo.com</div>
                                </div>
                            </div>
                        </td>
                        <td>2</td>
                        <td>3</td>
                        <td><span class="fw-bold text-danger">5</span></td>
                        <td><span class="badge text-bg-warning">Reportado</span></td>
                        <td class="text-end px-4">
                            <a href="#" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>