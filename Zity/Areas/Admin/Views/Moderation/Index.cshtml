@{
    ViewData["Title"] = "Centro de Moderación";
}

<!-- CÓDIGO DEL MODAL PARA CREAR ANUNCIO (aún no se usa, pero lo dejaremos para futuro) -->
<div class="modal fade" id="announcementModal" tabindex="-1">
    <!-- ... (Contenido del modal de anuncios) ... -->
</div>

<!-- CÓDIGO DEL MODAL PARA CREAR EVENTO (ahora sí se usa) -->
<div class="modal fade" id="eventModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-calendar-plus-fill me-2"></i>Crear Evento Comunitario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Título del Evento</label>
                        <input type="text" class="form-control" placeholder="Ej: Jornada de limpieza en Parque Central">
                    </div>
                    <!-- ... (resto del formulario del evento) ... -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Publicar Evento</button>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <header class="d-flex flex-wrap align-items-center justify-content-between pb-4 mb-4 border-bottom">
        <div>
            <h1 class="h2 fw-bold mb-1" style="font-family: 'Manrope', sans-serif;">Centro de Moderación</h1>
            <p class="text-muted">Herramientas para gestionar el contenido de la plataforma.</p>
        </div>
    </header>

    <!-- PESTAÑAS DE NAVEGACIÓN -->
    <!-- Ajuste clave: quitamos mb-4 y añadimos mb-0 border-bottom-0 para unirlo al contenido -->
    <ul class="nav nav-tabs nav-fill mb-0 border-bottom-0">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#tab-debates"><i class="bi bi-chat-dots-fill me-2"></i>Debates y Comentarios</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#tab-eventos"><i class="bi bi-calendar-event-fill me-2"></i>Gestión de Eventos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#tab-incidencias"><i class="bi bi-exclamation-triangle-fill me-2"></i>Comentarios en Incidencias</a>
        </li>
    </ul>

    <!-- CONTENIDO DE LAS PESTAÑAS (envuelto ahora en el 'tab-content') -->
    <div class="tab-content">

        <!-- ===== PESTAÑA 1: DEBATES Y COMENTARIOS ===== -->
        <div class="tab-pane fade show active" id="tab-debates">
            <!-- Barra de búsqueda -->
            <form class="row g-3 align-items-center mb-4">
                <div class="col-md-8">
                    <input type="text" class="form-control" placeholder="Buscar publicaciones por contenido o autor...">
                </div>
                <div class="col-md-4">
                    <select class="form-select">
                        <option selected>Filtrar por contenido reportado...</option>
                        <option>Spam</option>
                        <option>Ofensivo</option>
                    </select>
                </div>
            </form>

            <!-- Contenido de un comentario reportado -->
            <div class="border-bottom pb-3 mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Usuario Problemático</strong> en el debate <a href="#">"Nuevas rutas de autobús"</a>
                        <span class="badge text-bg-danger ms-2">Ofensivo</span>
                    </div>
                    <small class="text-muted">Hace 15 min</small>
                </div>
                <p class="text-muted border-start border-3 border-danger ps-3 mt-2 mb-2">
                    <em>"Este es un comentario de ejemplo que es ofensivo y necesita ser eliminado por un moderador."</em>
                </p>
                <div class="text-end">
                    <button class="btn btn-sm btn-outline-secondary">Ocultar</button>
                    <button class="btn btn-sm btn-danger">Eliminar</button>
                </div>
            </div>
            <!-- Otro comentario de ejemplo -->
            <div class="pt-2">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>SpammerBot</strong> en el hilo <a href="#">"Intento de Asalto"</a>
                        <span class="badge text-bg-warning ms-2">Spam</span>
                    </div>
                    <small class="text-muted">Hace 1 hora</small>
                </div>
                <p class="text-muted border-start border-3 border-warning ps-3 mt-2 mb-2">
                    <em>"Visita mi página web para ganar dinero fácil..."</em>
                </p>
                <div class="text-end">
                    <button class="btn btn-sm btn-outline-secondary">Ocultar</button>
                    <button class="btn btn-sm btn-danger">Eliminar</button>
                </div>
            </div>
        </div>

        <!-- ===== PESTAÑA 2: GESTIÓN DE EVENTOS ===== -->
        <div class="tab-pane fade" id="tab-eventos">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <p class="text-muted mb-0">Eventos creados por ciudadanos que esperan aprobación.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#eventModal">
                    <i class="bi bi-plus-lg me-2"></i>Crear Evento Comunitario
                </button>
            </div>

            <!-- Evento pendiente 1 -->
            <div class="border-bottom pb-3 mb-3 d-flex flex-wrap justify-content-between align-items-center">
                <div>
                    <h5 class="fw-bold mb-1">Feria de emprendedores locales</h5>
                    <small class="text-muted">Propuesto por <strong>emprende_sv</strong> · Participantes estimados: <strong>50+</strong></small>
                </div>
                <div class="mt-2 mt-md-0">
                    <button class="btn btn-sm btn-success">Aprobar Evento</button>
                    <button class="btn btn-sm btn-danger">Rechazar</button>
                </div>
            </div>
            <!-- Evento pendiente 2 -->
            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <div>
                    <h5 class="fw-bold mb-1">Torneo de fútbol barrial</h5>
                    <small class="text-muted">Propuesto por <strong>deportes_sv</strong> · Participantes estimados: <strong>30</strong></small>
                </div>
                <div class="mt-2 mt-md-0">
                    <button class="btn btn-sm btn-success">Aprobar Evento</button>
                    <button class="btn btn-sm btn-danger">Rechazar</button>
                </div>
            </div>
        </div>

        <!-- ===== PESTAÑA 3: COMENTARIOS EN INCIDENCIAS ===== -->
        <div class="tab-pane fade" id="tab-incidencias">
            <p class="text-muted">Aquí aparecerían los comentarios dentro de las incidencias que han sido reportados por otros usuarios, similar a la pestaña de Debates.</p>
            <div class="text-center p-4">
                <i class="bi bi-inbox fs-1 text-muted"></i>
                <h5 class="mt-3">No hay comentarios de incidencias reportados.</h5>
            </div>
        </div>
    </div>
</div>